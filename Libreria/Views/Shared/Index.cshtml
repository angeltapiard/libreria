@model Libreria.Models.SearchViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultados de la Búsqueda</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #F1F6FD;
        }

        .content {
            padding: 40px;
        }

        .card {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container content">
        <h2>Resultados de la Búsqueda</h2>

        @if (Model.Books.Any())
        {
            <h3>Libros</h3>
            <div class="row">
                @foreach (var book in Model.Books)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@book.Titulo</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Autor: @book.Autor</h6>
                                <p class="card-text">Géneros: @book.GenerosString</p>
                                <p class="card-text">Precio: @book.Precio.ToString("C")</p>
                                <p class="card-text">Cantidad Disponible: @book.Cantidad</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No se encontraron libros.</p>
        }

        @if (Model.Separators.Any())
        {
            <h3>Separadores</h3>
            <div class="row">
                @foreach (var separator in Model.Separators)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <img src="@Url.Action("GetImage", "Separator", new { id = separator.SeparadorID })" class="card-img-top" alt="@separator.Nombre">
                            <div class="card-body">
                                <h5 class="card-title">@separator.Nombre</h5>
                                <p class="card-text">Precio: @separator.Precio.ToString("C")</p>
                                <p class="card-text">Cantidad Disponible: @separator.Cantidad</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No se encontraron separadores.</p>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
