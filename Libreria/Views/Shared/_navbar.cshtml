@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")">
    <style>
        body {
            background-color: #F1F6FD;
            color: #002A70;
            font-family: 'Roboto', sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: #FFFFFF;
            padding: 10px 20px;
            border-bottom: 1px solid #E5E5E5;
        }

        .navbar-brand img {
            height: 50px;
        }

        .navbar-nav {
            margin-left: auto;
            margin-right: auto;
        }

            .navbar-nav .nav-link {
                color: #002A70 !important;
                font-size: 1rem;
                font-weight: 500;
                padding: 5px 20px;
                margin: 0 15px; /* Aumenta la separación entre enlaces */
                border-radius: 5px; /* Redondea un poco los bordes */
                transition: background-color 0.3s ease; /* Transición suave al cambiar el fondo */
            }

                /* Cambia el color de fondo al pasar el ratón */
                .navbar-nav .nav-link:hover {
                    color: #FFFFFF !important;
                    background-color: #0056b3; /* Fondo azul oscuro al pasar el ratón */
                }

                /* Cambia el color de fondo al hacer clic */
                .navbar-nav .nav-link:active {
                    background-color: #003b8a !important; /* Fondo aún más oscuro al hacer clic */
                    color: #FFFFFF !important;
                }

        /* Botones de iniciar sesión y registrarse */
        .navbar-buttons .btn {
            margin-left: 15px;
            font-size: 1rem;
            padding: 5px 15px;
        }

        .btn-login {
            background-color: #002A70;
            color: white;
        }

        .btn-register {
            background-color: #FFFFFF;
            color: #002A70;
            border: 1px solid #002A70;
        }

        .btn-login:hover {
            background-color: #003b8a;
        }

        .btn-register:hover {
            background-color: #f1f6fd;
        }

        .search-icon {
            color: #002A70;
            font-size: 1.5rem;
            cursor: pointer;
            margin-left: 20px;
        }

        .content {
            padding: 40px;
        }

        h3 {
            font-size: 2.5rem;
            font-weight: 700;
        }

        p.lead {
            font-size: 1.25rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">
            <img src="@Url.Content("~/img/4.png")" alt="Logo">
        </a>

        <!-- Botón de colapso (hamburguesa) para pantallas pequeñas -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Envoltura de los elementos colapsables -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Catalogo", "Home")">Catálogo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Miembro", "Home")">Sucursal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Club", "Home")">Contacto</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Sucursal", "Home")">Información</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Contacto", "Home")">Club de lectura</a>
                </li>
            </ul>
        </div>

        <!-- Botones de Iniciar sesión y Registrarse -->
        <div class="navbar-buttons">
            <a href="@Url.Action("Login", "Account")" class="btn btn-login">Iniciar sesión</a>
            <a href="@Url.Action("Register", "Account")" class="btn btn-register">Registrarse</a>
        </div>

        <span class="search-icon">
            <i class="fas fa-search"></i>
        </span>
    </nav>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
