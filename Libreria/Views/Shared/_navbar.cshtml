<!DOCTYPE html>

@{
    Layout = null;
}

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")">
    <style>
        /* Estilos para la búsqueda */
        .search-container {
            position: relative;
            display: flex;
            align-items: center;
            margin-right: 15px;
        }

        .search-input {
            padding: 5px 10px;
            border-radius: 20px;
            border: 1px solid #ddd;
            width: 150px;
            transition: width 0.5s ease;
            opacity: 1;
        }

            .search-input.active {
                width: 250px;
            }

        .search-icon {
            color: #002A70;
            font-size: 1.5rem;
            cursor: pointer;
            margin-right: 10px;
        }

        .dropdown-menu.search-results {
            width: 100%;
            max-width: 300px;
        }

        .search-result-item {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            display: flex;
            align-items: center;
            cursor: pointer;
        }

            .search-result-item img {
                width: 50px;
                height: 50px;
                margin-right: 10px;
                border-radius: 5px;
                object-fit: cover;
            }

            .search-result-item:hover {
                background-color: #f1f1f1;
            }

        .show-more-button {
            text-align: center;
            padding: 10px;
            background-color: #0056b3;
            color: white;
            cursor: pointer;
        }

            .show-more-button:hover {
                background-color: #003b8a;
            }

        .navbar-buttons {
            display: flex;
            align-items: center;
        }

        .search-result-details {
            display: flex;
            flex-direction: column;
        }

            .search-result-details .title {
                font-weight: 600;
            }

            .search-result-details .author,
            .search-result-details .price {
                font-size: 0.9rem;
                color: gray;
            }

        /* Estilos del icono de carrito */
        .cart-icon {
            position: relative;
            font-size: 1.5rem;
            margin-right: 20px;
            color: #002A70;
        }

            .cart-icon .badge {
                position: absolute;
                top: -8px; /* Ajusta la posición vertical del badge */
                right: -10px; /* Ajusta la posición horizontal del badge */
                font-size: 0.75rem;
                background-color: #ff6347; /* Color rojo para el contador */
                color: white;
                border-radius: 50%;
                padding: 0.25em 0.5em; /* Padding para el círculo */
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <img src="@Url.Content("~/img/4.png")" alt="Logo">
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Catálogo
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @foreach (var genero in Enum.GetValues(typeof(Libreria.Models.GeneroLibro)).Cast<Libreria.Models.GeneroLibro>())
                        {
                            <a class="dropdown-item" href="@Url.Action("PorGenero", "Libros", new { genero = genero })">@genero</a>
                        }
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Separadores", "Separadores")">Separadores</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Sucursal", "Info")">Información</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Club", "Info")">Club de lectura</a>
                </li>
            </ul>

            <div class="navbar-buttons ml-auto">
                <!-- Contenedor de búsqueda -->
                <div class="search-container">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" id="searchInput" class="search-input" placeholder="Buscar...">
                    <div class="dropdown-menu search-results" id="searchResults"></div>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Mostrar nombre del usuario e icono cuando está autenticado -->
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> @User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Name)?.Value
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="@Url.Action("Perfil", "Perfil")"><i class="bi bi-person"></i> Perfil</a>
                            @if (User.Claims.Any(c => c.Type == System.Security.Claims.ClaimTypes.Role && c.Value == "Admin"))
                            {
                                <!-- Ícono de ajustes, enlace a la acción Index del DashboardController -->
                                <a class="dropdown-item" href="@Url.Action("Index", "Dashboard")">
                                    <i class="bi bi-gear"></i> Administración
                                </a>
                            }
                            <div class="dropdown-divider"></div>
                            <form method="post" action="@Url.Action("Logout", "Login")">
                                <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</button>
                            </form>
                        </div>
                    </div>

                    <!-- Icono de carrito con número de artículos -->
                    <div class="nav-item">
                        <a class="nav-link cart-icon" href="@Url.Action("Index", "Carrito")">
                            <i class="bi bi-cart-fill"></i>
                            <span class="badge">@ViewBag.CarritoCount</span>
                        </a>
                    </div>
                }
                else
                {
                    <!-- Mostrar botones de iniciar sesión y registrarse cuando no está autenticado -->
                    <a href="@Url.Action("Iniciar", "Login")" class="btn btn-login">Iniciar sesión</a>
                    <a href="@Url.Action("Registrar", "Login")" class="btn btn-register">Registrarse</a>
                }

            </div>
        </div>
    </nav>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            // Mostrar input de búsqueda al hacer clic en la lupa
            $('.search-icon').on('click', function () {
                $('#searchInput').toggleClass('active').focus();
            });

            // Búsqueda dinámica
            $('#searchInput').on('keyup', function () {
                const query = $(this).val();

                if (query.length > 2) {
                    // Realizar la búsqueda a través de Ajax
                    fetch(`/Search/GetResults?query=${encodeURIComponent(query)}`)
                        .then(response => response.json())
                        .then(results => {
                            const searchResults = $('#searchResults');
                            searchResults.empty();

                            if (results.length > 0) {
                                results.slice(0, 5).forEach(result => {
                                    const resultItem = $('<div>')
                                        .addClass('search-result-item')
                                        .append($('<img>').attr('src', `data:image/jpeg;base64,${result.imagenBase64}`).attr('alt', result.titulo || result.nombre))
                                        .append(
                                            $('<div>').addClass('search-result-details')
                                                .append($('<div>').addClass('title').text(result.titulo || result.nombre))
                                                .append(result.autor ? $('<div>').addClass('author').text(result.autor) : null)
                                                .append($('<div>').addClass('price').text(`Precio: ${result.precio}`))
                                        )
                                        .on('click', () => {
                                            window.location.href = result.url;
                                        });
                                    searchResults.append(resultItem);
                                });

                                searchResults.show();
                            } else {
                                searchResults.hide();
                            }
                        });
                } else {
                    $('#searchResults').hide();
                }
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.js"></script>
</body>
</html>
