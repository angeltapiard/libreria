@model List<Libreria.Models.Libro>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link href="~/css/bootstrap-icons.css" rel="stylesheet">

<!-- Estilos para el efecto hover del ícono de carrito -->
<style>
    .btn-cart-icon {
        font-size: 1.5rem;
        color: blue;
        transition: color 0.3s ease, box-shadow 0.3s ease;
  
    }

        .btn-cart-icon:hover {
            color: #00BFFF; /* Azul celeste */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3); /* Sombra */
           
        }
</style>


@{
    Layout = null;

    var libros = Model.OrderByDescending(l => l.Id).Take(12).ToList();
    var separadores = ViewData["Separadores"] as List<Libreria.Models.Separador> ?? new List<Libreria.Models.Separador>();
    separadores = separadores.Take(6).ToList();
}

@Html.Partial("_navbar")

<div class="container content mt-2">
    <h5 class="mb-4">¡Bienvenido a Librería El Maestro!</h5>
    <p class="lead mb-5">Explora nuestro catálogo, encuentra nuestra sucursal, ponte en contacto con nosotros o aprende más sobre nuestra historia.</p>

    <!-- Sección de libros -->
    <h5 class="text-dark fw-bold text-center" style="font-size: 1.50rem;">ÚLTIMOS LIBROS AGREGADOS</h5>

    @for (int i = 0; i < libros.Count; i += 3)
    {
        <div class="row">
            @for (int j = i; j < i + 3 && j < libros.Count; j++)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card d-flex flex-row h-100 position-relative">
                        <a asp-action="Detalles" asp-controller="Home" asp-route-id="@libros[j].Id">
                            @if (libros[j].Portada != null && libros[j].Portada.Length > 0)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(libros[j].Portada)" alt="@libros[j].Titulo" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="~/img/no-portada.png" alt="No hay portada disponible" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                            }
                        </a>

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title mb-2" style="overflow: hidden; text-overflow: ellipsis; white-space: normal; margin: 0;">@libros[j].Titulo</h6>
                            <p class="card-text text-muted small mb-2">@libros[j].Autor</p>
                           
                            <p class="card-text text-primary small mb-1">RD @libros[j].Precio.ToString("C")</p>

                        

                            <!-- Formulario para agregar al carrito -->
                            <form asp-action="AgregarLibro" asp-controller="Carrito" method="post" class="d-inline" class="carrito-icono">
                                <input type="hidden" name="libroId" value="@libros[j].Id" />
                                <button type="submit" class="btn p-0" title="Agregar al carrito">
                                    <i class="bi bi-cart-plus btn-cart-icon"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-3">
        <a asp-action="VerTodosLosLibros" class="btn btn-primary">VER TODO</a>
    </div>

    <!-- Sección de separadores -->
    <h5 class="text-dark fw-bold text-center mt-5" style="font-size: 1.50rem;">ÚLTIMOS SEPARADORES AGREGADOS</h5>

    @for (int i = 0; i < separadores.Count; i += 3)
    {
        <div class="row">
            @for (int j = i; j < i + 3 && j < separadores.Count; j++)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card d-flex flex-row h-100 position-relative">
                        <a asp-action="DetallesSeparador" asp-controller="Home" asp-route-id="@separadores[j].SeparadorID">
                            @if (separadores[j].Foto != null && separadores[j].Foto.Length > 0)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(separadores[j].Foto)" alt="@separadores[j].Nombre" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="~/img/no-foto.png" alt="No hay imagen disponible" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                            }
                        </a>

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title mb-2" style="overflow: hidden; text-overflow: ellipsis; white-space: normal; margin: 0;">@separadores[j].Nombre</h6>
                            <p class="card-text text-primary small mb-1">RD @separadores[j].Precio.ToString("C")</p>

                            <!-- Línea azul debajo del precio -->
                            <hr class="my-2" style="border-top: 2px solid blue;" />

                            <!-- Formulario para agregar al carrito -->
                            <form asp-action="AgregarSeparador" asp-controller="Carrito" method="post" class="d-inline">
                                <input type="hidden" name="separadorId" value="@separadores[j].SeparadorID" />
                                <button type="submit" class="btn p-0" title="Agregar al carrito">
                                    <i class="bi bi-cart-plus btn-cart-icon"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-3">
        <a asp-action="VerTodosLosSeparadores" class="btn btn-primary">VER TODO</a>
    </div>
</div>

