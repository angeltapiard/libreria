@model List<Libreria.Models.Libro>
@{
    Layout = null;
}

@Html.Partial("_navbar")

<div class="container content mt-2">
    <h5 class="text-dark fw-bold text-center" style="font-size: 1.50rem;">TODOS LOS LIBROS</h5>

    @for (int i = 0; i < Model.Count; i += 3)
    {
        <div class="row">
            @for (int j = i; j < i + 3 && j < Model.Count; j++)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card d-flex flex-row h-100 position-relative">
                        <a asp-action="Detalles" asp-route-id="@Model[j].Id" class="text-decoration-none text-dark">
                            @if (Model[j].Portada != null && Model[j].Portada.Length > 0)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model[j].Portada)" alt="@Model[j].Titulo" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="~/img/no-portada.png" alt="No hay portada disponible" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                            }
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title mb-2" style="overflow: hidden; text-overflow: ellipsis; white-space: normal; margin: 0;">@Model[j].Titulo</h6>
                            <p class="card-text text-muted small mb-2">@Model[j].Autor</p>
                            <p class="card-text text-primary small mb-1">RD @Model[j].Precio.ToString("C")</p>

                            <!-- Formulario para agregar al carrito -->
                            <form asp-action="AgregarLibro" asp-controller="Carrito" method="post" class="d-inline">
                                <input type="hidden" name="libroId" value="@Model[j].Id" />
                                <button type="submit" class="btn p-0" title="Agregar al carrito">
                                    <i class="bi bi-cart-plus btn-cart-icon"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<br />
<br />

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Estilos para el efecto hover del ícono de carrito -->
<style>
    .btn-cart-icon {
        font-size: 1.5rem;
        color: blue;
        transition: color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-cart-icon:hover {
            color: #00BFFF; /* Azul celeste */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3); /* Sombra */
        }
</style>

