@model Libreria.Models.Libro

@{
    Layout = null;
    var librosRelacionados = ViewData["LibrosRelacionados"] as List<Libreria.Models.Libro>;
}

<!-- Estilos para el efecto hover del ícono de carrito -->
<style>
    .btn-cart-icon {
        font-size: 1.5rem;
        color: blue;
        transition: color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-cart-icon:hover {
            color: #00BFFF; /* Azul celeste */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3); /* Sombra */
        }
</style>

@Html.Partial("_navbar")

<div class="container mt-5">
    <div class="card">
        <div class="row g-0">
            <!-- Columna para la portada -->
            <div class="col-md-4 d-flex justify-content-center align-items-center bg-light">
                @if (Model.Portada != null && Model.Portada.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Portada)" alt="Portada del libro @Model.Titulo por @Model.Autor" class="img-fluid rounded-start w-75" />
                }
                else
                {
                    <div class="d-flex justify-content-center align-items-center p-3" style="height: 300px; width: 100%; background-color: #f0f0f0;">
                        <p class="text-muted mb-0">No hay portada disponible.</p>
                    </div>
                }
            </div>

            <!-- Columna para los detalles -->
            <div class="col-md-8">
                <div class="card-body text-dark">
                    <h3 class="mb-4">@Model.Titulo</h3>
                    <p class="card-text">@Model.Autor</p>
                    <p class="card-text fw-bold" style="font-size: 2rem;">@Model.Precio.ToString("C")</p>

                    <p class="card-text"><strong>Disponibles:</strong> @Model.Cantidad</p>
                    <p class="card-text"><strong>Páginas:</strong> @(Model.Paginas.HasValue ? Model.Paginas.Value.ToString() : "<span class='text-muted'>No especificado</span>")</p>
                    <p class="card-text"><strong>Encuadernación:</strong> @(Model.Encuadernacion ?? "<span class='text-muted'>No especificado</span>")</p>

                    <p class="card-text">
                        <strong>Sinopsis:</strong><br />
                        @if (!string.IsNullOrEmpty(Model.Sinopsis))
                        {
                            @Model.Sinopsis
                        }
                        else
                        {
                            <span class="text-muted">No disponible</span>
                        }
                    </p>

                    <!-- Muestra los géneros del libro -->
                    <p class="card-text"><strong>Géneros:</strong> @(Model.Generos.Any() ? string.Join(", ", Model.Generos) : "<span class='text-muted'>No especificado</span>")</p>

                    <!-- Formulario para agregar al carrito -->
                    <form asp-action="AgregarLibro" asp-controller="Carrito" method="post" class="d-inline" class="carrito-icono">
                        <input type="hidden" name="libroId" value="@Model.Id" /> <!-- Usar el ID del libro actual -->
                        <button type="submit" class="btn btn-primary" title="Agregar al carrito">
                            Agregar     <i class="bi bi-cart-plus"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sección de los libros relacionados -->
@if (librosRelacionados != null && librosRelacionados.Any())
{
    <div class="container mt-5">
        <h5 class="text-dark fw-bold text-center mt-5" style="font-size: 1.50rem;">Libros relacionados</h5>
        @for (int i = 0; i < librosRelacionados.Count; i += 3)
        {
            <div class="row">
                @for (int j = i; j < i + 3 && j < librosRelacionados.Count; j++)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <a asp-action="Detalles" asp-route-id="@librosRelacionados[j].Id" class="text-decoration-none text-dark">
                            <div class="card d-flex flex-row h-100">
                                @if (librosRelacionados[j].Portada != null && librosRelacionados[j].Portada.Length > 0)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(librosRelacionados[j].Portada)" alt="@librosRelacionados[j].Titulo" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="~/img/no-portada.png" alt="No hay portada disponible" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                                }
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title mb-2" style="overflow: hidden; text-overflow: ellipsis; white-space: normal; margin: 0;">@librosRelacionados[j].Titulo</h6>
                                    <p class="card-text text-muted small mb-2">@librosRelacionados[j].Autor</p>
                                    <p class="card-text text-primary small mb-1">RD @librosRelacionados[j].Precio.ToString("C")</p>
                                    <!-- Formulario para agregar al carrito -->
                                    <form asp-action="AgregarLibro" asp-controller="Carrito" method="post" class="d-inline" class="carrito-icono">
                                        <input type="hidden" name="libroId" value="@librosRelacionados[j].Id" />
                                        <button type="submit" class="btn p-0" title="Agregar al carrito">
                                            <i class="bi bi-cart-plus btn-cart-icon"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
}

