@model Libreria.Models.Separador

@{
    Layout = null;
    var ultimosSeparadores = ViewData["Separadores"] as List<Libreria.Models.Separador>; // Obtener los últimos separadores
}

@Html.Partial("_navbar")

<!-- Estilos para el efecto hover del ícono de carrito -->
<style>
    .btn-cart-icon {
        font-size: 1.5rem;
        color: blue;
        transition: color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-cart-icon:hover {
            color: #00BFFF; /* Azul celeste */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3); /* Sombra */
        }
</style>

<div class="container mt-5">
    <div class="card">
        <div class="row g-0">
            <!-- Columna para la foto del separador -->
            <div class="col-md-4 d-flex justify-content-center align-items-center bg-light">
                @if (Model.Foto != null && Model.Foto.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Foto)" alt="Foto de @Model.Nombre" class="img-fluid rounded-start w-75" />
                }
                else
                {
                    <div class="d-flex justify-content-center align-items-center p-3" style="height: 300px; width: 100%; background-color: #f0f0f0;">
                        <p class="text-muted mb-0">No hay imagen disponible.</p>
                    </div>
                }
            </div>

            <!-- Columna para los detalles del separador -->
            <div class="col-md-8">
                <div class="card-body text-dark">
                    <h3 class="mb-4">@Model.Nombre</h3>
                    <p class="card-text fw-bold" style="font-size: 2rem;">RD @Model.Precio.ToString("C")</p>
                    <p class="card-text"><strong>Disponibles:</strong> @Model.Cantidad</p>

                    <!-- Formulario para agregar al carrito -->
                    <form asp-action="AgregarSeparador" asp-controller="Carrito" method="post" class="d-inline" class="carrito-icono">
                        <input type="hidden" name="separadorId" value="@Model.SeparadorID" /> <!-- Aquí debes usar Model.SeparadorID -->
                        <button type="submit" class="btn btn-primary" title="Agregar al carrito">
                            AGREGAR AL CARRITO    <i class="bi bi-cart-plus"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sección de los últimos 6 separadores agregados -->
@if (ultimosSeparadores != null && ultimosSeparadores.Any())
{
    <div class="container mt-5">
        <h5 class="text-dark fw-bold text-center mt-5" style="font-size: 1.50rem;">ÚLTIMOS SEPARADORES AGREGADOS</h5>
        @for (int i = 0; i < ultimosSeparadores.Count; i += 3)
        {
            <div class="row">
                @for (int j = i; j < i + 3 && j < ultimosSeparadores.Count; j++)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <a asp-action="DetallesSeparador" asp-route-id="@ultimosSeparadores[j].SeparadorID" class="text-decoration-none text-dark">
                            <div class="card d-flex flex-row h-100">
                                @if (ultimosSeparadores[j].Foto != null && ultimosSeparadores[j].Foto.Length > 0)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(ultimosSeparadores[j].Foto)" alt="@ultimosSeparadores[j].Nombre" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="~/img/no-foto.png" alt="No hay imagen disponible" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                                }
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title mb-2" style="overflow: hidden; text-overflow: ellipsis; white-space: normal; margin: 0;">@ultimosSeparadores[j].Nombre</h6>
                                    <p class="card-text text-primary small mb-1">RD @ultimosSeparadores[j].Precio.ToString("C")</p>
                                    <!-- Formulario para agregar al carrito -->
                                    <form asp-action="AgregarSeparador" asp-controller="Carrito" method="post" class="d-inline" class="carrito-icono">
                                        <input type="hidden" name="libroId" value="@ultimosSeparadores[j].SeparadorID" /> <!-- Aquí debes usar el ID correcto -->
                                        <button type="submit" class="btn p-0" title="Agregar al carrito">
                                            <i class="bi bi-cart-plus btn-cart-icon"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
}

