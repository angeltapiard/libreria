@model IEnumerable<Libreria.Models.Libro>

<div class="container mt-4">
    <h3 class="mb-4">Listado de Libros</h3>
    <a asp-action="Crear" class="btn btn-primary mb-3 btn-lg px-4">
        <i class="bi bi-plus-circle me-2"></i> Añadir Libro
    </a>

    <div class="row">
        @foreach (var libro in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="row g-0 h-100">
                        <!-- Portada del libro -->
                        <div class="col-md-12 d-flex justify-content-center align-items-center p-3">
                            @if (libro.Portada != null && libro.Portada.Length > 0)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(libro.Portada)" alt="Portada de @libro.Titulo" class="img-fluid rounded" style="max-width: 100%; height: auto;" />
                            }
                            else
                            {
                                <div class="d-flex justify-content-center align-items-center bg-light" style="width: 100%; height: 200px;">
                                    <p class="text-muted text-center">No hay portada disponible.</p>
                                </div>
                            }
                        </div>

                        <!-- Detalles del libro -->
                        <div class="col-md-12">
                            <div class="card-body">
                                <h5 class="card-title">@libro.Titulo</h5>
                                <p class="card-text"><strong>Autor:</strong> @libro.Autor</p>
                                <p class="card-text"><strong>Precio:</strong> @libro.Precio.ToString("C")</p>
                                <p class="card-text"><strong>Cantidad:</strong> @libro.Cantidad</p>
                                <p class="card-text"><strong>Género:</strong> @(string.IsNullOrEmpty(libro.Genero) ? "<span class='text-muted'>No especificado</span>" : libro.Genero)</p>
                                <p class="card-text"><strong>Páginas:</strong> @(libro.Paginas.HasValue ? libro.Paginas.Value.ToString() : "<span class='text-muted'>No especificado</span>")</p>
                                <p class="card-text"><strong>Encuadernación:</strong> @(string.IsNullOrEmpty(libro.Encuadernacion) ? "<span class='text-muted'>No especificado</span>" : libro.Encuadernacion)</p>
                                <p class="card-text" style="white-space: pre-wrap;"><strong>Sinopsis:</strong><br /> @(string.IsNullOrEmpty(libro.Sinopsis) ? "<span class='text-muted'>No disponible</span>" : libro.Sinopsis)</p>

                                <!-- Botones de acción -->
                                <div class="mt-3">
                                    <a asp-action="Detalles" asp-route-id="@libro.Id" class="btn btn-info me-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Ver Detalles">
                                        <i class="bi bi-info-circle"></i>
                                    </a>

                                    <a asp-action="Editar" asp-route-id="@libro.Id" class="btn btn-warning text-white me-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <form asp-action="Eliminar" asp-route-id="@libro.Id" method="post" class="d-inline" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este libro?');">
                                        <button type="submit" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Activar los tooltips de Bootstrap
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(function (tooltipTriggerEl) {
            new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
