@model Libreria.Models.LibrosViewModel

@{
    Layout = null;
    ViewBag.Title = "Libros por Género";
    var genero = ViewBag.Genero as string;
    var libros = Model.Libros;
    var paginaActual = Model.PaginaActual;
    var totalPaginas = Model.TotalPaginas;
}

<!-- Incluir el navbar aquí -->
@Html.Partial("_navbar")

<!-- Estilos para el efecto hover del ícono de carrito -->
<style>
    .btn-cart-icon {
        font-size: 1.5rem;
        color: blue;
        transition: color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-cart-icon:hover {
            color: #00BFFF; /* Azul celeste */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3); /* Sombra */
        }

</style>

<div class="container mt-4">

    @if (libros.Any())
    {
        <h5 class="text-dark fw-bold text-center" style="font-size: 1.50rem;">Género @genero</h5>
        @for (int i = 0; i < libros.Count(); i += 3)
        {
            <div class="row">
                @for (int j = i; j < i + 3 && j < libros.Count(); j++)
                {
                    var libro = libros.ElementAt(j);
                    <div class="col-lg-4 col-md-6 mb-4">
                        <a href="@Url.Action("Detalles", "Home", new { id = libro.Id })" class="text-decoration-none text-dark">
                            <div class="card d-flex flex-row h-100">
                                @if (libro.Portada != null && libro.Portada.Length > 0)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(libro.Portada)" alt="@libro.Titulo" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="~/img/no-portada.png" alt="No hay portada disponible" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                                }
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title mb-2" style="overflow: hidden; text-overflow: ellipsis; white-space: normal; margin: 0;">@libro.Titulo</h6>
                                    <p class="card-text text-muted small mb-2">@libro.Autor</p>
                                    <p class="card-text text-primary small mb-1">RD @libro.Precio.ToString("C")</p>
                                    <!-- Formulario para agregar al carrito -->
                                    <form asp-action="AgregarLibro" asp-controller="Carrito" method="post" class="d-inline">
                                        <input type="hidden" name="libroId" value="@libro.Id" />
                                        <button type="submit" class="btn p-0" title="Agregar al carrito">
                                            <i class="bi bi-cart-plus btn-cart-icon"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }

        <!-- Paginación -->
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center mt-4">
                @if (paginaActual > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("PorGenero", new { genero = genero, pagina = paginaActual - 1 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= totalPaginas; i++)
                {
                    <li class="page-item @(i == paginaActual ? "active" : "")">
                        <a class="page-link" href="@Url.Action("PorGenero", new { genero = genero, pagina = i })">@i</a>
                    </li>
                }

                @if (paginaActual < totalPaginas)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("PorGenero", new { genero = genero, pagina = paginaActual + 1 })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <p>No se encontraron libros para el género seleccionado.</p>
    }
</div>

