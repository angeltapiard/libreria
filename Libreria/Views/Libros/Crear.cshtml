@model Libreria.Models.Libro

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Crear Libro</h3>
        </div>
        <div class="card-body">
            <form asp-action="Crear" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <!-- Campo para el título -->
                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" required />
                    <div class="invalid-feedback">
                        Por favor, ingrese el título del libro.
                    </div>
                </div>

                <!-- Campo para el autor -->
                <div class="mb-3">
                    <label asp-for="Autor" class="form-label">Autor</label>
                    <input asp-for="Autor" class="form-control" required />
                    <div class="invalid-feedback">
                        Por favor, ingrese el nombre del autor.
                    </div>
                </div>

                <!-- Campo para el precio -->
                <div class="mb-3">
                    <label asp-for="Precio" class="form-label">Precio</label>
                    <input asp-for="Precio" class="form-control" type="number" step="0.01" required />
                    <div class="invalid-feedback">
                        Por favor, ingrese el precio del libro.
                    </div>
                </div>

                <!-- Campo para la cantidad -->
                <div class="mb-3">
                    <label asp-for="Cantidad" class="form-label">Cantidad</label>
                    <input asp-for="Cantidad" class="form-control" type="number" required />
                    <div class="invalid-feedback">
                        Por favor, ingrese la cantidad disponible del libro.
                    </div>
                </div>



                <!-- Campo para el género -->
                <div class="mb-3">
                    <label class="form-label">Género</label>
                    <div class="row">
                        @foreach (var genero in Enum.GetValues(typeof(Libreria.Models.GeneroLibro)).Cast<Libreria.Models.GeneroLibro>())
                        {
                            <div class="col-md-3">
                                <!-- Ajusta el número de columnas según tu preferencia -->
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="genero@gen" name="Generos" value="@genero" />
                                    <label class="form-check-label" for="genero@gen">
                                        @genero.ToString().Replace("_", " ")
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>


                <!-- Campo para las páginas -->
                <div class="mb-3">
                    <label asp-for="Paginas" class="form-label">Número de Páginas</label>
                    <input asp-for="Paginas" class="form-control" type="number" />
                    <div class="invalid-feedback">
                        Por favor, ingrese el número de páginas del libro.
                    </div>
                </div>

                <!-- Campo para la encuadernación -->
                <div class="mb-3">
                    <label asp-for="Encuadernacion" class="form-label">Encuadernación</label>
                    <select asp-for="Encuadernacion" class="form-select" required>
                        <option value="">Seleccione el tipo de encuadernación</option>
                        <option value="Tapa Blanda">Tapa Blanda</option>
                        <option value="Tapa Dura">Tapa Dura</option>
                    </select>
                    <div class="invalid-feedback">
                        Por favor, seleccione el tipo de encuadernación del libro.
                    </div>
                </div>

                <!-- Campo para la sinopsis -->
                <div class="mb-3">
                    <label asp-for="Sinopsis" class="form-label">Sinopsis</label>
                    <textarea asp-for="Sinopsis" class="form-control" rows="5"></textarea>
                    <div class="invalid-feedback">
                        Por favor, ingrese la sinopsis del libro.
                    </div>
                </div>

                <!-- Campo para la portada -->
                <div class="mb-3">
                    <label class="form-label">Portada</label>
                    <input type="file" name="portadaFile" class="form-control" />
                    <div class="invalid-feedback">
                        Por favor, suba la portada del libro.
                    </div>
                    <div class="mt-2">
                        <img id="portadaPreview" src="" alt="Portada" class="img-thumbnail" style="max-width: 150px; display: none;" />
                    </div>
                    <script>
                        document.querySelector('input[name="portadaFile"]').addEventListener('change', function () {
                            var file = this.files[0];
                            var reader = new FileReader();
                            reader.onload = function (e) {
                                var img = document.querySelector('#portadaPreview');
                                img.src = e.target.result;
                                img.style.display = 'block';
                            };
                            reader.readAsDataURL(file);
                        });
                    </script>
                </div>

                <!-- Botón para guardar el libro -->
                <div class="text-end">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap validation script
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
