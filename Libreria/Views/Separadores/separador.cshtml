@model List<Libreria.Models.Separador>

@{
    Layout = null;
    ViewBag.Title = "Lista de Separadores";
    var separadores = Model;
    var paginaActual = ViewBag.PaginaActual ?? 1;
    var totalPaginas = ViewBag.TotalPaginas ?? 1;
}

<!-- Estilos para el efecto hover del ícono de carrito -->
<style>
    .btn-cart-icon {
        font-size: 1.5rem;
        color: blue;
        transition: color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-cart-icon:hover {
            color: #00BFFF; /* Azul celeste */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3); /* Sombra */
        }

</style>
<!-- Incluir el navbar aquí -->
@Html.Partial("_navbar")

<div class="container mt-4">
    @if (separadores != null && separadores.Count > 0)
    {
        <h5 class="text-dark fw-bold text-center" style="font-size: 1.50rem;">Lista de Separadores Disponibles</h5>

        @for (int i = 0; i < separadores.Count; i += 3)
        {
            <div class="row">
                @for (int j = i; j < i + 3 && j < separadores.Count; j++)
                {
                    var separador = separadores[j];
                    <div class="col-lg-4 col-md-6 mb-4">
                        <a href="@Url.Action("DetallesSeparador", "Home", new { id = separador.SeparadorID })" class="text-decoration-none text-dark">
                            <div class="card d-flex flex-row h-100">
                                @if (separador.Foto != null && separador.Foto.Length > 0)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(separador.Foto)" alt="@separador.Nombre" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="~/img/no-imagen.png" alt="No hay imagen disponible" class="img-fluid" style="width: 120px; height: 180px; object-fit: cover;" />
                                }
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title mb-2" style="overflow: hidden; text-overflow: ellipsis; white-space: normal; margin: 0;">@separador.Nombre</h6>
                                    <p class="card-text text-muted small mb-2">@separador.Precio.ToString("C2")</p>
                                    <!-- Formulario para agregar al carrito -->
                                    <form asp-action="AgregarSeparador" asp-controller="Carrito" method="post" class="d-inline">
                                        <input type="hidden" name="separadorId" value="@separador.SeparadorID" />
                                        <button type="submit" class="btn p-0" title="Agregar al carrito">
                                            <i class="bi bi-cart-plus btn-cart-icon"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }

        <!-- Paginación -->
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center mt-4">
                @if (paginaActual > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Separadores", new { pagina = paginaActual - 1 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= totalPaginas; i++)
                {
                    <li class="page-item @(i == paginaActual ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Separadores", new { pagina = i })">@i</a>
                    </li>
                }

                @if (paginaActual < totalPaginas)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Separadores", new { pagina = paginaActual + 1 })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <p>No se encontraron separadores.</p>
    }
</div>

