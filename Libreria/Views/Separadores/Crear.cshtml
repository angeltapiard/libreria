@model Libreria.Models.Separador

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Crear Separador</h3>
        </div>
        <div class="card-body">
            <form asp-action="Crear" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <!-- Campo para el nombre -->
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" required />
                    <div class="invalid-feedback">
                        Por favor, ingrese el nombre del separador.
                    </div>
                </div>

                <!-- Campo para el precio -->
                <div class="mb-3">
                    <label asp-for="Precio" class="form-label">Precio</label>
                    <input asp-for="Precio" class="form-control" type="number" step="0.01" required />
                    <div class="invalid-feedback">
                        Por favor, ingrese el precio del separador.
                    </div>
                </div>

                <!-- Campo para la cantidad -->
                <div class="mb-3">
                    <label asp-for="Cantidad" class="form-label">Cantidad</label>
                    <input asp-for="Cantidad" class="form-control" type="number" required />
                    <div class="invalid-feedback">
                        Por favor, ingrese la cantidad disponible del separador.
                    </div>
                </div>

                <!-- Campo para la foto -->
                <div class="mb-3">
                    <label class="form-label">Foto</label>
                    <input type="file" name="fotoFile" class="form-control" />
                    <div class="invalid-feedback">
                        Por favor, suba una foto del separador.
                    </div>
                    <div class="mt-2">
                        <img id="fotoPreview" src="" alt="Foto" class="img-thumbnail" style="max-width: 150px; display: none;" />
                    </div>
                    <script>
                        document.querySelector('input[name="fotoFile"]').addEventListener('change', function () {
                            var file = this.files[0];
                            var reader = new FileReader();
                            reader.onload = function (e) {
                                var img = document.querySelector('#fotoPreview');
                                img.src = e.target.result;
                                img.style.display = 'block';
                            };
                            reader.readAsDataURL(file);
                        });
                    </script>
                </div>

                <!-- Botón para guardar el separador -->
                <div class="text-end">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap validation script
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
