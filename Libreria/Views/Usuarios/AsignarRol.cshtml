@model Libreria.Models.Usuario

<div class="container mt-5">
    <h2 class=" mb-4">Asignar Rol a @Model.Nombre</h2>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Editar Rol</h5>
        </div>
        <div class="card-body">
            <form asp-action="AsignarRol" method="post">
                <div class="form-group">
                    <label for="nuevoRol">Rol</label>
                    @Html.DropDownList("nuevoRol", (SelectList)ViewBag.Roles, "Seleccione un rol", new { @class = "form-control" })
                </div>

                <input type="hidden" asp-for="UsuarioID" />

                <br /><br />
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>